# Customer Support Agent Crew Environment Configuration
# Copy this file to .env and configure your settings

# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# Mock Mode Setting
# Set to 'true' to use mock responses (no API calls)
# Set to 'false' to use OpenAI API (requires valid API key)
MOCK_MODE=true

# Optional: Custom Configuration
# Uncomment and modify as needed

# Log Level (DEBUG, INFO, WARNING, ERROR)
# LOG_LEVEL=INFO

# Maximum response length for FAQ answers
# MAX_RESPONSE_LENGTH=500

# Confidence threshold for escalation (0.0 to 1.0)
# ESCALATION_THRESHOLD=0.6

# Session timeout in minutes
# SESSION_TIMEOUT=30

# Database simulation settings
# MAX_LOG_ENTRIES=1000
# LOG_RETENTION_DAYS=90

# Performance monitoring
# TRACK_ANALYTICS=true
# ALERT_ON_HIGH_ESCALATION=true

# CrewAI specific settings
# CREW_VERBOSE=true
# CREW_MAX_EXECUTION_TIME=30
